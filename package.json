  ],
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^16.36.0",
    "commander": "^4.0.1",
    "date-fns": "^2.8.1",
    "execa": "^4.0.0",
    "fs-extra": "^8.1.0",
    "git-remote-origin-url": "^3.0.0",
    "parse-github-url": "^1.0.2",
    "prompt-promise": "^1.0.3",
    "semver": "^7.1.1"
  },
  "devDependencies": {
    "@pollyjs/adapter-node-http": "3.0.0",
    "@pollyjs/core": "3.0.0",
    "@pollyjs/persister-fs": "3.0.0",
    "@types/fs-extra": "8.0.1",
    "@types/jest": "24.0.25",
    "@types/lolex": "5.1.0",
    "@types/node": "12.12.22",
    "@types/parse-github-url": "1.0.0",
    "@types/pollyjs__adapter-node-http": "2.0.0",
