{
  "name": "tanem-scripts",
  "version": "0.0.3",
  "description": "CLI for common scripts for my projects.",
  "author": "Tane Morgan (https://github.com/tanem)",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "bin": {
    "tanem-scripts": "./dist/bin/tanem-scripts.js"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/tanem/tanem-scripts",
  "bugs": "https://github.com/tanem/tanem-scriptsissues",
  "repository": "github:tanem/tanem-scripts",
  "keywords": [
    "cli",
    "javascript",
    "scripts",
    "typescript"
  ],
  "license": "MIT",
  "dependencies": {
    "commander": "^2.20.0",
    "execa": "^2.0.3",
    "glob": "^7.1.4"
  },
  "devDependencies": {
    "@types/glob": "7.1.1",
    "@types/node": "12.6.6",
    "@typescript-eslint/eslint-plugin": "1.12.0",
    "@typescript-eslint/parser": "1.12.0",
    "codecov": "3.5.0",
    "del-cli": "2.0.0",
    "eslint": "6.0.1",
    "eslint-config-prettier": "6.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "shelljs": "0.8.3",
    "shelljs-plugin-authors": "2.0.11",
    "typescript": "3.5.3"
  },
  "scripts": {
    "authors": "shelljs-authors > AUTHORS",
    "build": "run-s clean compile",
    "changelog": "github_changelog_generator --no-issues --header-label \"# Changelog\" --future-release v$npm_package_version",
    "check:format": "prettier --list-different \"**/*.{js,ts}\"",
    "check:types": "tsc --noEmit",
    "clean": "run-p clean:*",
    "clean:coverage": "del coverage",
    "clean:dist": "del dist",
    "compile": "tsc -p tsconfig.base.json",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "lint": "eslint . --ext .ts",
    "postversion": "git push && git push --tags && npm publish",
    "release": "npm version -m 'Release v%s'",
    "test": "run-s check:* lint build",
    "// test": "run-s check:* lint build test:*",
    "// test:cjs": "jest --config ./scripts/jest/config.cjs.js",
    "// test:src": "jest --config ./scripts/jest/config.src.js",
    "version": "run-s test changelog authors && git add ."
  }
}
