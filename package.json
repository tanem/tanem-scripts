    "@types/pollyjs__persister-fs": "2.0.0",
    "@types/semver": "6.2.0",
    "@typescript-eslint/eslint-plugin": "2.14.0",
    "@typescript-eslint/parser": "2.14.0",
    "codecov": "3.6.1",
    "del-cli": "3.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "jest": "24.9.0",
    "lolex": "5.1.2",
    "make-dir": "3.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "ts-jest": "24.2.0",
    "typescript": "3.7.4"
  },
  "scripts": {
    "build": "run-s clean compile",
    "check:format": "prettier --list-different \"**/*.{js,ts}\"",
    "check:types": "tsc --noEmit",
    "clean": "run-p clean:*",
    "clean:coverage": "del coverage",
    "clean:dist": "del dist",
    "compile": "tsc -p tsconfig.base.json",
    "coverage": "codecov",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "lint": "eslint . --ext .js,.ts",
    "release": "node dist/cli release",
    "test": "run-s check:* lint build test:*",
    "test:cjs": "jest --config ./scripts/jest/config.cjs.js",
    "test:src": "jest --config ./scripts/jest/config.src.js"
  }
}
